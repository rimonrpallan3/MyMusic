<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarHelp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/highLightText"
            android:elevation="@dimen/_04"
            android:theme="@style/WhiteDrawerIconStyle" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSongList"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/ivAlbum"
                        android:layout_width="@dimen/_90"
                        android:layout_height="@dimen/_90"
                        android:layout_margin="@dimen/_10" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10"
                        android:layout_marginTop="@dimen/_10"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvSongTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_04"
                            android:text="Title"
                            android:textSize="@dimen/_20" />

                        <TextView
                            android:id="@+id/tvSongSubTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_04"
                            android:text="Sub Title"
                            android:textSize="@dimen/_14" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:gravity="right|center"
                        android:layout_marginRight="@dimen/_20"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivPrev"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_media_previous"/>

                        <ImageView
                            android:id="@+id/ivPlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_media_play"/>

                        <ImageView
                            android:id="@+id/ivNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_media_next"/>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </FrameLayout>



    </FrameLayout>


</android.support.constraint.ConstraintLayout>